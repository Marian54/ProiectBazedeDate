<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPanel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtnume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Person name"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPanel"
        app:layout_constraintRight_toRightOf="@+id/imgPanel"
        app:layout_constraintStart_toStartOf="@+id/imgPanel"
        app:layout_constraintTop_toBottomOf="@+id/imgPanel" />

    <TextView
        android:id="@+id/txtpromotie"
        android:layout_width="141dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:text="Anul Promotiei"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPanel"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtnume" />

    <TextView
        android:id="@+id/txtclasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPanel"
        app:layout_constraintStart_toStartOf="@+id/txtpromotie"
        app:layout_constraintTop_toBottomOf="@+id/txtpromotie" />

</androidx.constraintlayout.widget.ConstraintLayout>